<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomAnimBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomSeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressTint">@color/progress_color</item>
        <item name="android:thumbTint">@color/thumb_color</item>
        <item name="android:backgroundTint">@color/track_color</item>
    </style>
</resources>